<main>
    {{#with cube}}
    <h1>{{name}}</h1>
    <img class="cube" src={{imgUrl}}>
    <div class="details">
      <p><span>Description:</span> {{description}}</p>
      <p><span>Difficulty level:</span>{{level}}</p>
      <a class="btn" href="/">Back</a>
      <a class="btn" href="/attach/accessory/{{_id}}">Attach Acessory</a>
    </div>
    {{/with}}
    <h2>Accessories</h2>
      <div class="accessories">
    
      {{#each cube.accessories}}
      {{> accessory}}
      {{else}}
      <h3 class="italic">This cube has no accessories yet...</h3>
      {{/each}}

  </div>
</main>